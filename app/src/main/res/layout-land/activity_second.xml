<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".features.feature2.view.SecondActivity">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progressBarName"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/progressBarName"
        android:layout_toRightOf="@+id/progressBarName"
        android:id="@+id/editTextName" />

    <Button
        android:text="@string/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextName"
        android:layout_toRightOf="@+id/editTextName"
        android:layout_toEndOf="@+id/editTextName"
        android:id="@+id/buttonName" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progressBarAge"
        android:visibility="invisible" />

    <Button
        android:text="@string/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonName"
        android:layout_toEndOf="@+id/editTextName"
        android:id="@+id/buttonAge"
        android:layout_toRightOf="@+id/editTextName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/progressBarAge"
        android:layout_toStartOf="@+id/buttonAge"
        android:id="@+id/editTextAge"
        android:layout_toLeftOf="@+id/buttonAge" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarAge"
        android:layout_toLeftOf="@+id/editTextAge"
        android:layout_toStartOf="@+id/editTextAge"
        android:id="@+id/progressBarImage"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAge"
        android:layout_toEndOf="@+id/editTextAge"
        android:layout_toRightOf="@+id/editTextAge"
        android:text="@string/get" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_below="@+id/buttonImage"
        android:layout_toLeftOf="@+id/buttonImage"
        android:layout_toStartOf="@+id/buttonImage"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp" />
</RelativeLayout>
